<h1>Your Trees</h1><br>

<ol>
<% current_user.trees.each do |tree| %>
  <li>
    <a href="/trees/<%= tree.id %>"><%= Species.find(tree.species_id).name %></a>
    <br><br>
    <p>Date Surveyed: <%= tree.survey_date if tree.survey_date %></p>
    <p>Height: <%= tree.height if tree.height %> feet</p>
    <p>DBH: <%= tree.dbh if tree.dbh %> inches</p>
  </li>
  <% if tree != current_user.trees.last %>
    <br><br>
  <% end %>
<% end %>
</ol>